<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center|top"
              android:background="@color/football_bg"
              android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_m"
            android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1.4"
                      android:layout_height="match_parent">
            <TextView
                    android:id="@+id/liansainame"
                    android:text="欧冠"
                    style="@style/ItemName"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/bisailayout"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TextView
                    android:id="@+id/duiwu1"

                    android:text="大阪樱花"
                    style="@style/ItemTitlte"/>

            <TextView
                    android:id="@+id/rangqiu"
                    android:text="VS"
                    style="@style/ItemTitlte_Sub"/>

            <TextView
                    android:id="@+id/duiwu2"
                    android:text="大阪樱花"
                    style="@style/ItemTitlte"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_xxs"

            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/leftlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1.4"
                android:orientation="vertical"
        >


            <TextView
                    android:id="@+id/code"
                    style="@style/ItemSubTitlt"
                    android:text="001"
            />

            <TextView
                    android:id="@+id/time"
                    style="@style/ItemSubTitlt"
                    android:text="00:45截止"

            />


        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="@dimen/margin_m"
                          android:orientation="vertical">

                <View style="@style/Line_Item"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"

                              android:orientation="horizontal">


                    <LinearLayout
                            android:id="@+id/firstlayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <View style="@style/Line_V_Item"/>
                        <LinearLayout
                                android:id="@+id/ln1"
                                style="@style/ItemSecond"
                        >

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/football_txt"
                                    android:textSize="@dimen/txt_item_size"/>

                            <TextView
                                    android:id="@+id/btn0"
                                    android:text="20.47"
                                    style="@style/ItemTxtSecond"/>
                        </LinearLayout>

                        <View style="@style/Line_V_Item"/>
                        <LinearLayout
                                android:id="@+id/ln2"
                                style="@style/ItemSecond">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="@color/football_txt"
                                    android:textSize="@dimen/txt_item_size"/>

                            <TextView
                                    android:id="@+id/btn1"
                                    style="@style/ItemTxtSecond"
                                    android:text="20.47"
                            />
                        </LinearLayout>
                        <View style="@style/Line_V_Item"/>
                        <LinearLayout
                                android:id="@+id/ln3"
                                style="@style/ItemSecond">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textColor="@color/football_txt"
                                    android:textSize="@dimen/txt_item_size"/>

                            <TextView
                                    android:id="@+id/btn2"
                                    android:text="20.47"
                                    style="@style/ItemTxtSecond"/>
                        </LinearLayout>
                        <View style="@style/Line_V_Item"/>
                        <LinearLayout
                                android:id="@+id/ln4"
                                style="@style/ItemSecond">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textColor="@color/football_txt"
                                    android:textSize="@dimen/txt_item_size"/>

                            <TextView
                                    android:id="@+id/btn3"
                                    style="@style/ItemTxtSecond"

                                    android:text="120.47"
                            />
                        </LinearLayout>
                        <View style="@style/Line_V_Item"/>
                    </LinearLayout>


                </LinearLayout>

                <View style="@style/Line_Item"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"


                >
                    <View style="@style/Line_V_Item"/>

                    <LinearLayout
                            android:id="@+id/ln5"
                            style="@style/ItemSecond">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textColor="@color/football_txt"
                                android:textSize="@dimen/txt_item_size"/>

                        <TextView
                                android:id="@+id/btn4" 
                                style="@style/ItemTxtSecond"
                                android:text="20.47"
                        />
                    </LinearLayout>
                    <View style="@style/Line_V_Item"/>
                    <LinearLayout
                            android:id="@+id/ln6"
                            style="@style/ItemSecond">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="@color/football_txt"
                                android:textSize="@dimen/txt_item_size"/>

                        <TextView
                                android:id="@+id/btn5"
                                style="@style/ItemTxtSecond"
                                android:text="20.47"
                        />
                    </LinearLayout>
                    <View style="@style/Line_V_Item"/>
                    <LinearLayout
                            android:id="@+id/ln7"
                            style="@style/ItemSecond">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textColor="@color/football_txt"
                                android:textSize="@dimen/txt_item_size"/>

                        <TextView
                                android:id="@+id/btn6"

                                android:text="20.47"
                                style="@style/ItemTxtSecond"/>
                    </LinearLayout>
                    <View style="@style/Line_V_Item"/>
                    <LinearLayout
                            android:id="@+id/ln8"
                            style="@style/ItemSecond">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7+"
                                android:textColor="@color/football_txt"
                                android:textSize="@dimen/txt_item_size"/>

                        <TextView
                                android:id="@+id/btn7"
                                style="@style/ItemTxtSecond"
                                android:text="12.47"
                        />
                    </LinearLayout>
                    <View style="@style/Line_V_Item"/>
                </LinearLayout>


                <View style="@style/Line_Item"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutbottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/gap_s"
                android:paddingTop="@dimen/gap_s"
                android:background="@color/green_row_light">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="两队排名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_item_size"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_item_size"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_item_size"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_item_size"/>
        </LinearLayout>

        <!-- <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_view_divider_high_s"
            android:background="@color/default_bar_vertical_divider" />
 -->
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/gap_s"
                android:paddingTop="@dimen/gap_s"
                android:background="@color/green_row_dark">

            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="历史交锋"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_item_size"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_item_size"/>
        </LinearLayout>
    </LinearLayout>

    <View
            android:layout_marginTop="@dimen/margin_m"
           style="@style/Line"/>

</LinearLayout>