<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/parent"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@color/football_bg"
              android:orientation="vertical"

              android:focusable="false"
>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_weight="1.4"
                android:orientation="vertical"
        >

            <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:clickable="false"
                    android:focusable="false"
                    android:text="1"
                    android:textColor="@color/lscolor"
                    android:textSize="15sp"/>
            <TextView

                    android:id="@+id/liansainame"
                    android:visibility="gone"
                    android:text="欧冠"
                    style="@style/ItemName"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/bisailayout"
                android:layout_marginLeft="@dimen/margin_m"
                style="@style/ItemLLTitlle">

            <TextView
                    android:id="@+id/duiwu1"
                    style="@style/ItemTitlte"
                    android:text="大阪樱花"
            />

            <TextView
                    android:id="@+id/rangqiu"
                    style="@style/ItemTitlte_Sub"
                    android:text="VS"
            />

            <TextView
                    android:id="@+id/duiwu2"
                    android:text="大阪樱花"
                    style="@style/ItemTitlte"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout style="@style/Car"
                  android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="false"

                android:orientation="vertical">
            <View style="@style/Line_Item"/>
            <LinearLayout android:layout_width="match_parent"

                          android:layout_height="match_parent"
                          android:orientation="horizontal">
                <View style="@style/Line_V_Item"/>
                <LinearLayout
                        android:id="@+id/shengLy"
                        style="@style/ItemSecond"
                >

                    <TextView
                            android:id="@+id/speilv"
                            style="@style/ItemSecond"
                            android:text="主胜3"
                    />
                </LinearLayout>
                <View style="@style/Line_V_Item"/>
                <LinearLayout
                        android:id="@+id/pingLy"
                        style="@style/ItemSecond">


                    <TextView
                            android:id="@+id/ppeilv"

                            android:text="平1"
                            style="@style/ItemSecond"
                    />
                </LinearLayout>
                <View style="@style/Line_V_Item"/>
                <LinearLayout
                        android:id="@+id/fuLy"
                        style="@style/ItemSecond">


                    <TextView
                            android:id="@+id/fpeilv"
                            style="@style/ItemSecond"
                            android:text="主胜3"
                    />
                </LinearLayout>
                <View style="@style/Line_V_Item"/>
            </LinearLayout>
            <View style="@style/Line_Item"/>
        </LinearLayout>
        <ImageView
                android:id="@+id/danbtn"
                style="@style/Delete"
        />
    </LinearLayout>

    <View style="@style/Line_Item" android:layout_marginTop="@dimen/margin_m"/>
</LinearLayout>