<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">


        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:contentDescription="@null"
                android:src="@drawable/next"/>

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/lottery_icon_size"
                android:layout_height="@dimen/lottery_icon_size"
                android:layout_centerVertical="true"
                android:layout_margin="6dp"
                android:background="@drawable/caizhong_icon1"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/imageView1"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center|left">

            <LinearLayout
                    android:id="@+id/layoutfortext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                <TextView
                        android:id="@+id/caipiaoname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center_vertical|left"
                        android:textSize="@dimen/textsize_kj_name"
                        android:textColor="#4B4A4B"
                        android:text="全国22选5"/>

                <TextView
                        android:id="@+id/issue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:paddingLeft="2dp"
                        android:paddingRight="1dp"
                        android:gravity="right"
                        android:textSize="@dimen/textsize_kj_time1"
                        android:textColor="@color/dark_gray"
                        android:text=""/>

                <TextView
                        android:id="@+id/time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:textSize="@dimen/textsize_kj_time1"
                        android:textColor="@color/gray"
                        android:text="2013-07-07"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/qiulayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center|left">
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
