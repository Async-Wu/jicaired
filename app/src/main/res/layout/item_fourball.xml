<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/margin_m"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_marginTop="@dimen/margin_m"

            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_m"
                android:gravity="center"
                android:id="@+id/ll"
                android:orientation="vertical">
            <TextView

                    android:gravity="center"
                    android:textColor="@color/lscolor"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:id="@+id/legeaug"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="联赛"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="0dp"
                      android:gravity="center"
                      android:textColor="@color/lscolor"
                      android:layout_weight="1"
                      android:text="时间"
                      android:textSize="12sp"
                      android:id="@+id/fourball_time"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="vertical">

            <TextView


                    android:gravity="center"
                    android:textSize="@dimen/txt_item_size"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/red"
                    android:layout_weight="1"
                    android:id="@+id/game1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>

            <TextView

                    android:textColor="@color/red"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_item_size"
                    android:layout_marginTop="4dp"
                    android:id="@+id/game2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_m"
                android:layout_marginRight="@dimen/margin_m"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:textSize="@dimen/txt_item_size"
                    android:gravity="center"
                    android:textColor="@color/football_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="球队一"
                    android:id="@+id/team1"/>
            <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/txt_item_size"
                    android:gravity="center"
                    android:textColor="@color/football_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="球队二"
                    android:id="@+id/team2"/>

        </LinearLayout>


        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
            <View style="@style/Line_Item"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <View  style="@style/Line_V_Item"/>

                    <TextView
                             style="@style/ItemSecond"
                          android:text="0球"
                            android:id="@+id/fourball1_zero"
                          /><View  style="@style/Line_V_Item"/>
                    <TextView
                            android:text="1球"
                            android:id="@+id/fourball1_one"
                            style="@style/ItemSecond"/>
                    <View  style="@style/Line_V_Item"/>
                    <TextView
                            android:text="2球"
                            android:id="@+id/fourball1_two"
                            style="@style/ItemSecond"/>
                    <View  style="@style/Line_V_Item"/>
                    <TextView
                            android:text="3+球"
                            android:id="@+id/fourball1_three"
                            style="@style/ItemSecond"/>
                    <View  style="@style/Line_V_Item"/>
                </LinearLayout>
                <View style="@style/Line_Item"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <View  style="@style/Line_V_Item"/>

                    <TextView

                            android:id="@+id/fourball2_zero"
                            android:text="0球"
                            style="@style/ItemSecond"/>
                    <View  style="@style/Line_V_Item"/>
                    <TextView

                            android:id="@+id/fourbal2_one"
                            android:text="1球"
                            style="@style/ItemSecond"/>
                    <View  style="@style/Line_V_Item"/>
                    <TextView
                            style="@style/ItemSecond"
                            android:text="2球"
                            android:id="@+id/fourball2_two"
                           />
                    <View  style="@style/Line_V_Item"/>
                    <TextView
                          android:text="3+球"
                            android:id="@+id/fourball2_three"
                            style="@style/ItemSecond"/>
                    <View  style="@style/Line_V_Item"/>

                </LinearLayout>


            </LinearLayout>


            <View style="@style/Line_Item"/>


        </LinearLayout>


    </LinearLayout>


    <View
            style="@style/Line_Item"
            android:id="@+id/v"
            android:layout_marginTop="@dimen/margin_m"/>


</LinearLayout>