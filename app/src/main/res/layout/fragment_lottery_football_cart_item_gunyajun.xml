<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
 android:background="@drawable/select_line"
    android:focusable="false"
    android:paddingBottom="@dimen/gap_xs"
    android:paddingLeft="28dip"
    android:paddingRight="28dip"
    android:paddingTop="@dimen/gap_xs" >

    <Button
        android:id="@+id/danbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_delete"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/danbtn"
        android:clickable="false"
        android:gravity="center" >

        <TextView
            android:id="@+id/num"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/lscolor"
            android:textSize="@dimen/text_size_s" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/select_line"
            android:clickable="true"
            android:gravity="center"
     >

            <TextView
                android:id="@+id/duiwu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:text="大阪樱花"
                android:textColor="@color/new_btn_selector_football"
                android:textSize="@dimen/text_size_s" />
            <TextView
            android:id="@+id/duiwu_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:text=" -- "
            android:textColor="@color/new_btn_selector_football"
            android:textSize="@dimen/text_size_s" />
        <TextView
            android:id="@+id/duiwu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:text="西班牙"
            android:textColor="@color/new_btn_selector_football"
            android:textSize="@dimen/text_size_s" />

            <TextView
                android:id="@+id/speilv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:clickable="false"
                android:duplicateParentState="true"
                android:focusable="false"
                android:text="4.35"
                android:textColor="@color/new_btn_selector_shengfu14chang"
                android:textSize="@dimen/text_size_s" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>