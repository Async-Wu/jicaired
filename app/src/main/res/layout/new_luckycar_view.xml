<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/label_bg"
        android:gravity="center"
        android:text="奖金"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/ywcolor" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/ywcolor" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/ywcolor" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/ywcolor" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dip"
        android:background="@drawable/label_bg"
        android:gravity="center"
        android:text="选号"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/select_half_line_normal"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_alignTop="@+id/textView6" >

        <LinearLayout 
            android:id="@+id/layout1"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:orientation="vertical"
            android:background="@drawable/select_half_line"
            android:gravity="center"
            android:padding="2dip"
            android:layout_weight="1"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/football_txt"
                android:textSize="@dimen/txt_group_size"
                android:text="小奇" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/football_txt"
                android:layout_marginTop="5dip"
                android:textSize="@dimen/txt_group_size"
                android:text="01 03 05" />
            
        </LinearLayout>
       <LinearLayout 
            android:id="@+id/layout2"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:orientation="vertical"
            android:background="@drawable/select_half_line"
            android:gravity="center"
            android:padding="2dip"
            android:layout_weight="1"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/football_txt"
                android:textSize="@dimen/txt_group_size"
                android:text="小偶" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/football_txt"
                android:layout_marginTop="5dip"
                android:textSize="@dimen/txt_group_size"
                android:text="02 04 06" />
            
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/layout3"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:orientation="vertical"
            android:background="@drawable/select_half_line"
            android:gravity="center"
            android:padding="2dip"
            android:layout_weight="1"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/football_txt"
                android:textSize="@dimen/txt_group_size"
                android:text="大奇" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/football_txt"
                android:layout_marginTop="5dip"
                android:textSize="@dimen/txt_group_size"
                android:text="07 09 11" />
            
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/layout4"
            android:layout_width="0dip"
            android:layout_height="60dip"
            android:orientation="vertical"
            android:background="@drawable/select_half_line"
            android:gravity="center"
            android:padding="2dip"
            android:layout_weight="1"
            android:clickable="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/football_txt"
                android:textSize="@dimen/txt_group_size"

                android:text="大偶" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/football_txt"
                android:layout_marginTop="5dip"
                android:textSize="@dimen/txt_group_size"
                android:text="08 10 12" />
            
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>