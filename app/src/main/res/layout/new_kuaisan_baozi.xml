<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/k3tishitext"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猜中一个豹子号，奖金240元"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
         >

        <Button
            android:id="@+id/button1"
            style="@style/ButtonKS.Item"
            android:text="111" />
        <Button
            android:id="@+id/button2"
            style="@style/ButtonKS.Item"
            android:text="222" />
        <Button
            android:id="@+id/button3"
            style="@style/ButtonKS.Item"
            android:text="333" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        >
        <Button
            android:id="@+id/button4"
            style="@style/ButtonKS.Item"
            android:text="444" />
        <Button
            android:id="@+id/button5"
            style="@style/ButtonKS.Item"
            android:text="555" />
        <Button
                style="@style/ButtonKS.Item"
            android:text="666" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="只要开豹子，奖金40元"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        />
     <Button
            android:id="@+id/button7"
            android:layout_width="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:layout_height="@dimen/kuaisanduizi"
            android:background="@drawable/select_half_line"
            style="@style/ButtonKS3"
            android:text="111 222 333 444 555 666" />

</LinearLayout>