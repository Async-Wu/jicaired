<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/football_bg"
              android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1.4"
                android:orientation="vertical"
 >

            <TextView

                    android:id="@+id/liansainame"
                    android:text="欧冠"
                    style="@style/ItemName"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/bisailayout"
                style="@style/ItemLLTitlle">

            <TextView
                    android:id="@+id/duiwu1"
                    style="@style/ItemTitlte"
                    android:text="大阪樱花"
            />

            <TextView
                    android:id="@+id/rangqiu"
                    style="@style/ItemTitlte_Sub"
                    android:text="VS"
            />

            <TextView
                    android:id="@+id/duiwu2"
                    android:text="大阪樱花"
                    style="@style/ItemTitlte"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_m"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <!--
             <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        -->

        <LinearLayout
                android:id="@+id/leftlayout"
                style="@style/ItemLeft">


            <TextView
                    android:id="@+id/code"
                    android:text="001"
                    style="@style/ItemSubTitlt"/>
            <TextView
                    android:id="@+id/time"
                    android:text="00:45截止"
                    style="@style/ItemSubTitlt"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="false"
                android:layout_weight="7"

                android:layout_marginRight="@dimen/margin_m"
                android:orientation="vertical">


            <LinearLayout
                    android:id="@+id/spflayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/nrqlayout"
                        android:text="0"
                        style="@style/ItemSmall"/>

                <Button
                        android:id="@+id/btn1"
                        android:text="胜 100.47"
                        style="@style/BtnCart"/>

                <Button
                        android:id="@+id/btn2"

                        android:text="平 100.47"
                        style="@style/BtnCart"/>

                <Button
                        android:id="@+id/btn3"

                        android:text="负 880.47"
                        style="@style/BtnCart"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/rqspflayout"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/rqtext"
                        android:text="1"
                        style="@style/ItemSmall.White"/>

                <Button
                        android:id="@+id/btn4"
                        android:text="胜 100.47"
                        style="@style/Item"/>

                <Button
                        android:id="@+id/btn5"
                        style="@style/BtnCart"
                        android:text="平 100.47"
                />

                <Button
                        android:id="@+id/btn6"
                        android:text="负 880.47"
                        style="@style/BtnCart"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layoutbottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/gap_s"
                android:paddingTop="@dimen/gap_s"
                android:background="@color/green_row_light">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="两队排名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>
        </LinearLayout>

        <!-- <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_view_divider_high_s"
            android:background="@color/default_bar_vertical_divider" /> -->

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/gap_s"
                android:paddingTop="@dimen/gap_s"
                android:background="@color/green_row_dark">

            <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="历史交锋"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt3"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>
        </LinearLayout>

        <!-- <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_view_divider_high_s"
            android:background="@color/default_bar_vertical_divider" /> -->

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/gap_s"
                android:paddingTop="@dimen/gap_s"
                android:background="@color/green_row_light">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="平均赔率"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>

            <View
                    android:layout_width="@dimen/list_view_divider_high_s"
                    android:layout_height="match_parent"
                    android:background="@color/default_bar_vertical_divider"/>

            <TextView
                    android:id="@+id/txt8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_sxs"/>
        </LinearLayout>
    </LinearLayout>

    <View
            style="@style/Line"/>

</LinearLayout>