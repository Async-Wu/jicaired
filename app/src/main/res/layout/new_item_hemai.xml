<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingBottom="8dp"
        android:background="#f4f4f4"

        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/leftLayout"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:gravity="center"
                >


            <com.chengyi.app.view.progress.RoundProgressBarWidthNumber
                    android:id="@+id/textViewjindu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    app:progress_text_color="@color/red"
                    app:progress_reached_bar_height="1dp"
                    app:progress_unreached_bar_height="3dp"
                    android:layout_centerHorizontal="true"
                    app:progress_unreached_color="#E7E7E7"
                    app:progress_reached_color="@color/red"
                    app:progress_text_size="14sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/baoditext"
                    android:layout_below="@id/textViewjindu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green_text"
                    android:layout_margin="3dp"
                    android:textSize="16sp"
                    android:text="69%"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_marginRight="6dp"
                style="@style/LineV"/>

        <LinearLayout
                android:id="@+id/rightLayout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingRight="12dp"
                android:layout_weight="3"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"

                        android:layout_marginLeft="5dp"

                        android:background="@drawable/userimage"/>


                <TextView
                        android:id="@+id/username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="6dp"
                        android:text="1111"
                        android:textColor="#6D6C6C"
                        android:textSize="18sp"/>

                <View
                        android:layout_margin="3dp"
                        style="@style/LineV"/>

                <TextView
                        android:id="@+id/textViewname"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textSize="18sp"
                        android:textColor="#6D6C6C"
                        android:text="竞彩足球"/>
            </LinearLayout>

            <View
                    android:id="@+id/view1"
                    android:background="#E8E8E8"
                    style="@style/Line"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="6dp"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                    <TextView
                            android:id="@+id/zongjinetext"
                            style="@style/whw.subTxt"
                            android:gravity="left"
                            android:text="总金额"
                            />


                    <TextView
                            android:id="@+id/shengyutext"
                            style="@style/whw.subTxt"
                            android:text="剩余"

                            />


                    <TextView
                            android:id="@+id/canyutext"
                            style="@style/whw.subTxt"
                            android:text="参与"
                            android:gravity="right"
                            />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/zongjine"
                            style="@style/whw.subTxt"
                            android:text="189元"
                            android:gravity="left"

                            />

                    <TextView
                            android:id="@+id/shengyu"
                            style="@style/whw.subTxt"
                            android:text="2元"

                            />

                    <TextView
                            android:id="@+id/canyu"
                            style="@style/whw.subTxt"
                            android:gravity="right"
                            android:text="23人"
                            />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>