<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:baselineAligned="false">
    
    <include layout="@layout/title_back"/>
    
    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/sr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        
        <ScrollView
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="none"
                android:layout_weight="1">
            
            <LinearLayout
                    android:id="@+id/usercenter_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
            
            >
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin"
                        android:orientation="vertical"
                >
                    
                    <LinearLayout
                            
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                    
                    >
                        
                        <LinearLayout
                                style="@style/LL"
                                android:id="@+id/ll_avter"
                                android:layout_width="match_parent"
                               
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:paddingBottom="@dimen/margin">
                            
                            <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginBottom="6dp"
                                    android:background="@drawable/touxiang"
                            />
                            
                            <TextView
                                    style="@style/MeTxt"
                                    android:id="@+id/tv_name"
                                    android:maxLines="1"
                                    android:textColor="@color/lscolor"
                                    
                                    tools:text="cshi"/>
                        
                        </LinearLayout>
                        
                        <View
                                style="@style/Line"/>
                    
                    
                    </LinearLayout>
                
                
                </LinearLayout>
                
                <View
                        
                        style="@style/Line"/>
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        
                        android:layout_height="wrap_content">
                    
                    <LinearLayout
                            style="@style/LL"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal"
                            android:layout_width="0dp">
                        
                        <TextView
                                style="@style/MeTxt"
                                android:layout_marginLeft="12dp"
                                android:text="@string/yue"
                        
                        />
                        
                        <TextView
                                style="@style/MeTxt"
                                android:lines="1"
                                android:id="@+id/tv_yue"
                                android:layout_marginLeft="6dp"
                                android:gravity="right"
                                android:text="@string/yuee"/>
                    </LinearLayout>
                    
                    <View
                          style="@style/Line_V_Item.Me"
                    
                    />
                    
                    
                    <LinearLayout
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:padding="6dp"
                            android:gravity="center"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1">
                        
                        <TextView
                                style="@style/MeTxt"
                                android:layout_marginLeft="12dp"
                                android:text="@string/cljn"
                        />
                        
                        <TextView
                                style="@style/MeTxt"
                                android:id="@+id/tv_caijin"
                                android:layout_marginLeft="6dp"
                                android:gravity="right"
                                
                                android:text="@string/cljn"/>
                    </LinearLayout>
                </LinearLayout>
                
                <View
                        style="@style/Line"
                        android:layout_marginBottom="12dp"/>
                
                <View
                        style="@style/Line"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    
                    <LinearLayout
                            android:layout_width="0dp"
                            android:id="@+id/ll_conzi"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                    
                    >
                        
                        
                        <ImageView
                                android:src="@drawable/wode_congzhi"
                                style="@style/MeNext"/>
                        
                        <TextView
                                style="@style/MeTxt.Me"
                                
                                android:text="@string/cz"/>
                    </LinearLayout>
                    
                    <View
                            style="@style/Line_V_Item.Me"
                    
                    />
                    
                    <LinearLayout
                            android:layout_width="0dp"
                            android:id="@+id/ll_tik"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                        
                        <ImageView
                                android:src="@drawable/wode_tixian"
                                style="@style/MeNext"/>

                        <TextView
                                style="@style/MeTxt.Me"


                                android:text="@string/tik"
                            android:id="@+id/textView13" />
                    </LinearLayout>
                </LinearLayout>
                
                <View
                        style="@style/Line"/>
                
                <View
                        android:layout_marginTop="16dp"
                        style="@style/Line"/>
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/rl_buy"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        
                        <ImageView
                                android:src="@drawable/wode_dingdan"
                                style="@style/MeNext"/>
                        
                        <TextView
                                style="@style/MeTxt.Me"
                                android:text="@string/gcjl"/>
                    
                    
                    </LinearLayout>
                    
                    <View
                            style="@style/Line_V_Item.Me"
                    
                    />
                    
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/rl_goon"
                            android:orientation="horizontal">
                        
                        <ImageView
                                android:src="@drawable/wode_gerenxinxi"
                                
                                style="@style/MeNext"/>
                        
                        <TextView
                                style="@style/MeTxt.Me"
                                android:text="@string/zhjl"/>
                    
                    
                    </LinearLayout>
                </LinearLayout>
                
                <View
                        style="@style/Line"/>
                
                <View
                        android:layout_marginTop="16dp"
                        style="@style/Line"/>
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        
                        android:layout_height="wrap_content">
                    
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/rl_detail"
                            android:gravity="center"
                            android:orientation="horizontal">
                        
                        <ImageView
                                android:src="@drawable/wode_zijinjilu"
                               
                                style="@style/MeNext"/>
                        
                        <TextView
                                style="@style/MeTxt.Me"
                                
                                android:text="@string/detail"/>
                    
                    
                    </LinearLayout>
                    
                    <View
                            style="@style/Line_V_Item.Me"

                    />
                    
                    <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/ll_set"
                            android:orientation="horizontal">

                        <ImageView
                                android:src="@drawable/wode_shezhi"
                                style="@style/MeNext"
                            android:id="@+id/imageView4" />

                        <TextView
                                style="@style/MeTxt.Me"
                                android:text="账户设置"/>
                    
                    
                    </LinearLayout>
                </LinearLayout>
                
                <View
                        style="@style/Line"
                        android:layout_height="16dp"
                        android:visibility="gone"
                        android:background="#eee"/>
                
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_act"
                        android:visibility="gone"
                        android:orientation="horizontal">
                    
                    <TextView
                            style="@style/MeTxt.Me"
                            
                            android:text="@string/act"/>
                    
                    <ImageView
                            style="@style/MeNext"/>
                
                </RelativeLayout>
                
                <View
                        style="@style/Line"/>
                
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl_shop"
                        android:visibility="gone"
                        android:orientation="horizontal">
                    
                    <TextView
                            style="@style/MeTxt.Me"
                            
                            android:text="@string/shop"/>
                    
                    <ImageView
                            style="@style/MeNext"/>
                
                </RelativeLayout>
                
                <View
                        style="@style/Line"
                        android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_call"
            android:orientation="horizontal"
            android:gravity="center">
        
        <TextView
                style="@style/MeTxt"
                android:visibility="gone"
                android:textColor="@color/red"
                android:text="@string/call"/>
    </LinearLayout>
</LinearLayout>
