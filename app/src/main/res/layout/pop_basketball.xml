<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:background="@color/main_bg_color"
			 >
	<LinearLayout
			android:id="@+id/layouttopselect"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@color/main_bg_color"
			android:paddingBottom="@dimen/gap_l"
			android:gravity="center_vertical"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"

	>
		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

			<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical" >

				<TextView
						android:id="@+id/wanfa"
						android:text="过关玩法"
						style="@style/pop_ball_title" />
				<View
						android:id="@+id/guoguan_bootm"
						android:layout_width="match_parent"
						android:layout_height="@dimen/line"
						android:background="@color/red" />
			</LinearLayout>

			<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical" >
				<TextView
						android:id="@+id/football_pop_news_btn"

						android:text="单关玩法"
						android:textColor="@color/football_grey"
						style="@style/pop_ball_title"/>
				<View
						android:visibility="gone"
						android:id="@+id/danguan_bootm"
						android:layout_width="match_parent"
						android:layout_height="@dimen/line"
						android:background="@color/red" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
				android:layout_marginTop="@dimen/gap_m"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
		>
			<TextView
					android:id="@+id/pop_basket_buttonsf"
					android:text="胜负"
					style="@style/pop_ball"
					/>
			<TextView
					android:id="@+id/pop_basket_buttonrfsf"
					android:text="让分胜负"
					style="@style/pop_ball"
					/>

			<TextView
					android:id="@+id/pop_basket_btnshengfencha"
					style="@style/pop_ball"

					android:text="胜分差"
					 />
		</LinearLayout>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/gap_m"
				android:orientation="horizontal" >

			<TextView
					android:id="@+id/pop_basket_btnbigsmall"

					android:text="大小分"
					style="@style/pop_ball"
					/>
			<TextView
					android:id="@+id/pop_basket_btnmix"

					android:text="混合过关"
					style="@style/pop_ball"
					/>

		</LinearLayout>
	</LinearLayout>

</LinearLayout>