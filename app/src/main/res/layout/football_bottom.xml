<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottomlayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical"
        tools:showIn="@layout/fragment_lottery_football">


    <TextView
            android:id="@+id/qingkong"
            android:text="清空"
            style="@style/Qyks"/>

    <View style="@style/LineV"
          android:layout_toRightOf="@id/qingkong"
          android:id="@+id/v"
          android:background="@color/football_grey"
          android:layout_margin="0dp"/>

    <Button
            android:id="@+id/ensurebtn"
            android:text="确认"
            style="@style/BottomBtn"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/ensurebtn"
            android:layout_toRightOf="@id/v"
            android:gravity="center"
            android:orientation="vertical">


        <LinearLayout android:layout_width="match_parent"
                      android:gravity="center_horizontal"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <TextView
                    android:id="@+id/yixuantishi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="请至少选择"

                    android:textColor="@color/dark_grey_new"
                    android:textSize="@dimen/btn_txt"
            />

            <TextView
                    android:id="@+id/numbisai"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/red"
                    android:textSize="@dimen/btn_txt"
            />

            <TextView
                    android:id="@+id/bisaitishi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="场比赛"
                    android:textColor="@color/dark_grey_new"
                    android:textSize="@dimen/btn_txt"
            />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>