<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/k3tishitext"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开奖号码相加的总和"
        android:textColor="@color/football_normal"
        android:textSize="18sp"
        />
    <LinearLayout
        android:id="@+id/firstContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
         >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_half_line"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal"
        >   
    </LinearLayout>
    <LinearLayout
        android:id="@+id/threeContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/select_half_line"
        android:orientation="horizontal"
        >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fourContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/select_half_line"
        android:orientation="horizontal"
        >
    </LinearLayout>
    <TextView
        android:id="@+id/kuaisantishitwo"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猜中对子+单数组合，奖金80元"
        android:textColor="@color/football_normal"
        android:textSize="18sp"
        />
    <LinearLayout
        android:id="@+id/fiveContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:background="@drawable/select_half_line"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
    >
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sixContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_half_line"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
         >
    </LinearLayout>

</LinearLayout>